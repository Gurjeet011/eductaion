<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">


               <ImageView
                   android:id="@+id/img"
                   android:layout_width="match_parent"
                   android:layout_height="300dp"

                   android:layout_marginStart="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginBottom="10dp"
                   android:src="@drawable/a"></ImageView>
               <TextView
                   android:id="@+id/txt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Personal Info"
                   android:textColor="@color/black"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:layout_below="@id/img"
                   android:layout_centerHorizontal="true">

               </TextView>
               <RelativeLayout
                   android:id="@+id/r1"
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:layout_below="@id/txt"
                   android:layout_marginStart="30dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginEnd="30dp"
                   android:background="@color/white">


                   <androidx.cardview.widget.CardView
                       android:id="@+id/card"
                       android:layout_width="60dp"
                       android:layout_height="60dp"
                       android:layout_alignParentStart="true"
                       android:layout_centerHorizontal="true"
                       android:layout_centerVertical="true"
                       android:background="@drawable/circleoutline"
                       android:padding="50dp"
                       app:cardCornerRadius="100dp">

                       <RelativeLayout
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:background="@drawable/circleoutline">
                       </RelativeLayout>

                       <ImageView
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_gravity="center"
                           app:tint="@color/black"
                           android:src="@drawable/smartphone">

                       </ImageView>


                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:id="@+id/mobile"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignTop="@+id/card"
                       android:layout_marginLeft="10dp"
                       android:layout_toRightOf="@id/card"
                       android:text="Mobile No."
                       android:textColor="@color/black"
                       android:textSize="15sp"
                       android:textStyle="bold">


                   </TextView>

                   <EditText
                       android:id="@+id/mobileee"
                       android:singleLine="true"
                       android:textColorHint="@color/black"
                       android:backgroundTint="@color/black"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/mobile"
                       android:layout_alignBottom="@id/card"
                       android:layout_marginLeft="5dp"
                       android:layout_toRightOf="@id/card"
                       android:textSize="12sp"
                       android:textColor="@color/black"
                       android:hint="Mobile Phone Number">


                   </EditText>

               </RelativeLayout>
               <RelativeLayout
                   android:id="@+id/r2"
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:layout_below="@id/r1"
                   android:layout_marginStart="30dp"
                   android:layout_marginEnd="30dp"
                   android:background="@color/white">


                   <androidx.cardview.widget.CardView
                       android:id="@+id/card2"
                       android:layout_width="60dp"
                       android:layout_height="60dp"
                       android:layout_alignParentStart="true"
                       android:layout_centerHorizontal="true"
                       android:layout_centerVertical="true"
                       android:background="@drawable/circleoutline"
                       android:padding="50dp"
                       app:cardCornerRadius="100dp">

                       <RelativeLayout
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:background="@drawable/circleoutline">
                       </RelativeLayout>

                       <ImageView
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_gravity="center"
                           app:tint="@color/black"
                           android:src="@drawable/lock"></ImageView>


                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:id="@+id/password"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignTop="@+id/card2"
                       android:layout_marginLeft="10dp"
                       android:layout_toRightOf="@id/card2"
                       android:text="Password"
                       android:textColor="@color/black"
                       android:textSize="15sp"
                       android:textStyle="bold">


                   </TextView>

                   <EditText
                       android:id="@+id/passeordd"
                       android:singleLine="true"
                       android:textColorHint="@color/black"
                       android:textColor="@color/black"
                       android:backgroundTint="@color/black"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/password"
                       android:layout_alignBottom="@id/card2"
                       android:layout_marginLeft="5dp"
                       android:inputType="textPassword"
                       android:layout_toRightOf="@id/card2"
                       android:textSize="12sp"
                       android:hint="password">

                   </EditText>
                   <ImageView
                       android:id="@+id/eye4"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/eyes"
                       android:layout_marginRight="5dp"
                       android:layout_centerVertical="true"
                       android:layout_alignParentEnd="true"
                       android:visibility="gone"/>
                   <ImageView
                       android:id="@+id/hideeye4"
                       android:visibility="gone"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/hideeyes"
                       android:layout_marginRight="5dp"
                       android:layout_centerVertical="true"
                       android:layout_alignParentEnd="true"/>


               </RelativeLayout>
               <TextView
                   android:id="@+id/forgotpassword"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:textColor="@color/black"
                   android:text=""
                   android:layout_below="@id/r2"
                   android:layout_alignLeft="@id/r2">

               </TextView>




               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/login"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/forgotpassword"
                   android:layout_alignLeft="@id/forgotpassword"
                   android:layout_alignRight="@id/r2"
                   android:text="Log in"
                   android:textColor="@color/black"
                   android:textAllCaps="false"
                   android:background="@drawable/signup"
                   android:layout_marginTop="20dp">
               </androidx.appcompat.widget.AppCompatButton>

              <!-- <TextView
                   android:id="@+id/otp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/login"
                   android:layout_centerInParent="true"
                   android:layout_marginTop="10dp"
                   android:text="login with otp"
                   android:textColor="@color/black"
                   android:textSize="15sp">

               </TextView>
               <View
                   android:id="@+id/view"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/black"
                   android:layout_alignEnd="@id/otp"
                   android:layout_alignStart="@id/otp"
                   android:layout_below="@id/otp">



               </View>
-->               <TextView
                   android:id="@+id/newstudent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="New Student"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="20sp"
                   android:layout_below="@id/login"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="20dp">
               </TextView>
               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/Registerw"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/newstudent"
                   android:layout_alignLeft="@id/forgotpassword"
                   android:layout_alignRight="@id/r2"
                   android:text="Register"
                   android:textColor="@color/black"
                   android:textAllCaps="false"
                   android:background="@drawable/signup"
                   android:layout_marginTop="20dp">
               </androidx.appcompat.widget.AppCompatButton>
               <TextView
                   android:id="@+id/floow"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="follow us on"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="20dp"
                   android:layout_below="@id/Registerw"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="20dp">
               </TextView>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/floow"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="20dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentEnd="true"
                   android:gravity="center_horizontal"


                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/imageView1"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/tube" />

                   <ImageView
                       android:id="@+id/imageView2"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="5dp"

                       android:src="@drawable/instagram" />

                   <!-- Repeat the pattern for the remaining ImageViews -->

                   <ImageView
                       android:id="@+id/imageView6"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="5dp"
                       android:src="@drawable/facebook" />



                   <ImageView
                       android:id="@+id/imageView5"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="5dp"

                       android:src="@drawable/twitter" />

                   <ImageView
                       android:id="@+id/imageView66"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="5dp"

                       android:src="@drawable/telegram" />

               </LinearLayout>






           </RelativeLayout>
       </RelativeLayout>
   </androidx.core.widget.NestedScrollView>

</RelativeLayout>