<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PaidCoursedetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rl1"
        android:background="@color/white"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/leftarrow"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

        </ImageView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/newlogo"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="right">

        </ImageView>

    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:id="@+id/text_namee"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text=""
                android:background="#B5E4FA"
                />


            <RelativeLayout
                android:id="@+id/r3"
                android:layout_below="@id/text_namee"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/outline2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">


                <RelativeLayout
                    android:id="@+id/bb"
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/outline2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin=".9dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:background="@color/white"
                            android:id="@+id/imgdesz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/uppc"
                            android:scaleType="fitCenter"
                            tools:ignore="NotSibling">
                        </ImageView>


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
                <TextView
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#5E6163"
                    android:layout_below="@id/bb"
                    android:layout_marginLeft="15dp"
                    android:textSize="22sp">
                </TextView>
                <TextView
                    android:id="@+id/pricee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="108"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp">
                </TextView>



            </RelativeLayout>


            <TextView
                android:id="@+id/dess"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:ellipsize="end"
                android:maxLines="10"
                android:focusable="true"
                android:textColor="@color/black"
                android:text=""
                android:layout_toRightOf="@id/r3"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_below="@id/text_namee"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                tools:ignore="NotSibling">


            </TextView>


            <RelativeLayout
                android:id="@+id/r4"
                android:layout_below="@id/r3"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/outline2"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <WebView
                    android:id="@+id/youtube_player"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/dearstudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/r4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Dear Students"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/adddesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dearstudent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:text="What"

                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adddesc"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:text="Techcanopus"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:id="@+id/founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:text="Founder-Techcanopus"
                android:textSize="20sp">
            </TextView>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buynow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup"
                android:text="Buy now"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@id/founder"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/statuss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup"
                android:text="Status"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@id/founder"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false">

            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="50dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/outline_bg"
                android:weightSum="2"

                android:layout_below="@id/founder">

                <TextView
                    android:id="@+id/vediosx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Videos"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textAllCaps="false">

                </TextView>

                <TextView
                    android:id="@+id/pdfx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PDF"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_margin="2dp"
                    android:textAllCaps="false">

                </TextView>


            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>