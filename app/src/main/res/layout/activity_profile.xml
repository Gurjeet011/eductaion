<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".Profile">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rl1"
        android:background="@color/white"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/aroowback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/leftarrow"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

        </ImageView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/newlogo"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="right">

        </ImageView>
        <TextView
            android:id="@+id/my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="My Profile"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl1">



        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="50dp"
                app:cardCornerRadius="100dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circleoutline">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/black"
                        android:src="@drawable/userblack">

                    </ImageView>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/card"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/card"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">


            </TextView>

            <EditText
                android:id="@+id/edtname"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile"
                android:layout_alignBottom="@id/card"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/card"
                android:hint="Name">


            </EditText>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/r1"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="50dp"
                app:cardCornerRadius="100dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circleoutline">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/black"
                        android:src="@drawable/smartphone">

                    </ImageView>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/card2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/card2"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">


            </TextView>

            <EditText
                android:id="@+id/edtnumber"
                android:singleLine="true"
                android:textColorHint="@color/black"

                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile"
                android:layout_alignBottom="@id/card2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/card2"
                android:hint="phone Number">


            </EditText>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/r2"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="50dp"
                app:cardCornerRadius="100dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circleoutline">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/black"
                        android:src="@drawable/emailblack">

                    </ImageView>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/card2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/card2"
                android:text="Email ID"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">


            </TextView>

            <EditText
                android:id="@+id/edtmail"
                android:singleLine="true"
                android:textColorHint="@color/black"

                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile"
                android:layout_alignBottom="@id/card2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/card2"
                android:hint="Email ID">


            </EditText>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/r3"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="50dp"
                app:cardCornerRadius="100dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circleoutline">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/black"
                        android:src="@drawable/district">

                    </ImageView>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/card2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/card2"
                android:text="District"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">


            </TextView>

            <EditText
                android:id="@+id/edtdistrict"
                android:singleLine="true"
                android:textColorHint="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:layout_below="@id/mobile"
                android:layout_alignBottom="@id/card2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/card2"
                android:hint="District">


            </EditText>

        </RelativeLayout>

        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/r4"
            android:text="Update Password"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_below="@id/r4"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_alignRight="@id/qq"
            android:layout_alignLeft="@id/qq"
            android:layout_below="@id/qq">

        </View>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:text="Update Profile"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:background="@drawable/signup"
            >
        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</RelativeLayout>