<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Result">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rl1"
        android:background="@color/white"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/timg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/leftarrow"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

        </ImageView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/newlogo"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="right">

        </ImageView>

        <TextView
            android:id="@+id/tt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl1"
            android:layout_gravity="center_horizontal"
            android:text="Result"
            android:textColor="@color/black"
            android:textSize="18sp"
            >

        </TextView>

    </androidx.appcompat.widget.Toolbar>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rl1"
        android:layout_marginHorizontal="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/attempt"/>


            <TextView
                android:id="@+id/att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attempted Questions :"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/twitter"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/viewdetal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textColor="#42D4E6"
                android:layout_toRightOf="@+id/att"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50/80"
                android:textColor="@color/black"
                android:layout_below="@id/att"
                android:layout_toRightOf="@id/twitter"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_below="@id/twitter"
                android:layout_marginVertical="3dp"
                android:layout_alignLeft="@id/result"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/yt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/greenx"/>


            <TextView
                android:id="@+id/att1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct :"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/yt"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50/80"
                android:textColor="@color/black"
                android:layout_below="@id/att1"
                android:layout_toRightOf="@id/yt"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_below="@id/yt"
                android:layout_marginVertical="3dp"
                android:layout_alignLeft="@id/result1"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/insta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/redy"
                />


            <TextView
                android:id="@+id/att2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incorrect :"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/insta"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50/80"
                android:textColor="@color/black"
                android:layout_below="@id/att2"
                android:layout_toRightOf="@id/insta"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_below="@id/insta"
                android:layout_marginVertical="3dp"
                android:layout_alignLeft="@id/result2"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/fb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/marks"/>


            <TextView
                android:id="@+id/att3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marks :"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/fb"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/result3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50/80"
                android:textColor="@color/black"
                android:layout_below="@id/att3"
                android:layout_toRightOf="@id/fb"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_below="@id/fb"
                android:layout_marginVertical="3dp"
                android:layout_alignLeft="@id/result3"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>