<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Signup">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"

                    android:src="@drawable/a"></ImageView>
                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Info"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_below="@id/img"
                    android:layout_centerHorizontal="true">

                </TextView>
                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/txt"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/white">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circleoutline"
                        android:padding="50dp"
                        app:cardCornerRadius="100dp">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circleoutline">
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:tint="@color/black"
                            android:src="@drawable/userblack"></ImageView>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/card"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/card"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold">


                    </TextView>

                    <EditText
                        android:id="@+id/names"
                        android:textColorHint="@color/black"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mobile"
                        android:layout_alignBottom="@id/card"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/card"
                        android:textSize="12sp"
                        android:hint="Name">


                    </EditText>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/r1"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/white">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circleoutline"
                        android:padding="50dp"
                        app:cardCornerRadius="100dp">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circleoutline">
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:tint="@color/black"
                            android:src="@drawable/smartphone"></ImageView>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/card2"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/card2"
                        android:text="Mobile No."
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold">


                    </TextView>

                    <EditText
                        android:id="@+id/mobileno"
                        android:textColorHint="@color/black"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/password"
                        android:layout_alignBottom="@id/card2"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/card2"
                        android:textSize="12sp"
                        android:hint="Mobile No.">


                    </EditText>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/r2"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/white">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circleoutline"
                        android:padding="50dp"
                        app:cardCornerRadius="100dp">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circleoutline">
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:tint="@color/black"
                            android:src="@drawable/emailblack"></ImageView>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/card2"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/card2"
                        android:text="Email ID"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold">


                    </TextView>

                    <EditText
                        android:id="@+id/emaill"
                        android:textColorHint="@color/black"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_alignBottom="@id/card2"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/card2"
                        android:textSize="12sp"

                        android:hint="Email ID">


                    </EditText>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/r3"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/white">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circleoutline"
                        android:padding="50dp"
                        app:cardCornerRadius="100dp">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circleoutline">
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:tint="@color/black"
                            android:src="@drawable/district"></ImageView>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/card2"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/card2"
                        android:text="District"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold">


                    </TextView>

                    <EditText
                        android:id="@+id/districtt"
                        android:textColorHint="@color/black"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/district"
                        android:layout_alignBottom="@id/card2"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/card2"
                        android:textSize="12sp"

                        android:hint="District">


                    </EditText>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/r4"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/white">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circleoutline"
                        android:padding="50dp"
                        app:cardCornerRadius="100dp">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circleoutline">
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:tint="@color/black"
                            android:src="@drawable/lock"></ImageView>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/card2"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/card2"
                        android:text="password"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold">


                    </TextView>

                    <EditText
                        android:id="@+id/passwordy"
                        android:textColorHint="@color/black"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pass"
                        android:layout_alignBottom="@id/card2"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/card2"
                        android:textSize="12sp"

                        android:hint="password">
                    </EditText>
                    <ImageView
                        android:id="@+id/eye5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/eyes"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        tools:ignore="DuplicateIds" />
                    <ImageView
                        android:id="@+id/hideeye5"
                        android:visibility="gone"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/hideeyes"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        tools:ignore="DuplicateIds" />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r6"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/r5"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/white">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circleoutline"
                        android:padding="50dp"
                        app:cardCornerRadius="100dp">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circleoutline">
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:tint="@color/black"
                            android:src="@drawable/lock"></ImageView>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/passw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/card2"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/card2"
                        android:text="Confirm Password"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold">


                    </TextView>

                    <EditText
                        android:id="@+id/confirmpassword"
                        android:textColorHint="@color/black"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/passw"
                        android:layout_alignBottom="@id/card2"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/card2"
                        android:textSize="12sp"

                        android:hint="Confirm Password">


                    </EditText>
                    <ImageView
                        android:id="@+id/eye6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/eyes"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/hideeye6"
                        android:visibility="gone"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/hideeyes"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>


                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/r6"
                    android:layout_alignLeft="@id/r6"
                    android:layout_alignRight="@id/r6"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:background="@drawable/signup"
                    android:layout_marginTop="20dp">
                </androidx.appcompat.widget.AppCompatButton>

                <TextView
                    android:id="@+id/floow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="follow us on"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_below="@id/signup"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/floow"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                  android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tube" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/instagram" />

                    <!-- Repeat the pattern for the remaining ImageViews -->

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"

                        android:src="@drawable/facebook" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"

                        android:src="@drawable/twitter" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"

                        android:src="@drawable/telegram" />



                </LinearLayout>






            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>