<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Freecoursedescription">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:id="@+id/text_name"

        android:gravity="center"

        android:paddingHorizontal="10dp"

        android:background="#B5E4FA"/>


            <RelativeLayout
                android:id="@+id/r3"
                android:layout_below="@id/text_name"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/outline2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                
                
                <RelativeLayout
                    android:id="@+id/bb"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/outline2">

                   <androidx.cardview.widget.CardView

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin=".9dp"
                       app:cardCornerRadius="10dp">

                       <ImageView
                           android:id="@+id/imgdes"
                           android:background="@color/white"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/uppc"
                           android:scaleType="fitCenter"
                           tools:ignore="NotSibling">
                       </ImageView>

                   </androidx.cardview.widget.CardView>



                </RelativeLayout>


            </RelativeLayout>


            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:textColor="@color/black"
                android:text="jkbdvvdvhjdvcjbvebfevbfbfibfbybybvubuvefbvubhvbfehhebuhbhfbvhbehuvbhbhufbuhvbfjhbvhufbvjhfbhvfbvhfbvhbfvhfhhbvhfbvfbvhbhfbvbfhbvhfvhfbvjhfbvhfbvhfbvhfbhvbfhbvhfbvhfvbhfbvfhbvhvbfhvbfhudvhjdvhdvuvvcudc"
                android:layout_toRightOf="@id/r3"
                android:ellipsize="end"
                android:maxLines="10"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_below="@id/text_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
             >


            </TextView>
            
            
            <RelativeLayout
                android:id="@+id/r4"
                android:layout_below="@id/r3"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/outline2"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <WebView
                    android:id="@+id/youtube_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/dearstudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/r4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Dear Students"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dearstudent"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:text="What"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/summary"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:text="Techcanopus"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:id="@+id/founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:text="Founder-Techcanopus"
                android:textSize="20sp">
            </TextView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="50dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/outline_bg"
                android:weightSum="2"

                android:layout_below="@id/founder">

                <TextView
                    android:id="@+id/vedios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Videos"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textAllCaps="false">

                </TextView>

                <TextView
                    android:id="@+id/pdf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PDF"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_margin="2dp"
                    android:textAllCaps="false">

                </TextView>


            </LinearLayout>

        </RelativeLayout>


